{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "league_completed.schema.json",
  "title": "LEAGUE_COMPLETED",
  "description": "League Manager â†’ All Agents: All rounds completed",
  "allOf": [
    { "$ref": "_base_message.schema.json" }
  ],
  "type": "object",
  "properties": {
    "message_type": {
      "const": "LEAGUE_COMPLETED"
    },
    "sender": {
      "const": "league_manager"
    },
    "league_id": {
      "type": "string"
    },
    "total_rounds": {
      "type": "integer",
      "minimum": 1,
      "description": "Total number of rounds played"
    },
    "total_matches": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of matches played"
    },
    "champion": {
      "type": "object",
      "properties": {
        "player_id": {
          "type": "string"
        },
        "display_name": {
          "type": "string"
        },
        "points": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["player_id", "points"],
      "description": "League champion details"
    },
    "final_standings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "rank": {
            "type": "integer",
            "minimum": 1
          },
          "player_id": {
            "type": "string"
          },
          "points": {
            "type": "integer",
            "minimum": 0
          }
        },
        "required": ["rank", "player_id", "points"]
      },
      "description": "Final standings of all players"
    }
  },
  "required": ["protocol", "message_type", "sender", "timestamp", "conversation_id", "league_id", "total_rounds", "total_matches", "champion", "final_standings"]
}
