{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "game_join_ack.schema.json",
  "title": "GAME_JOIN_ACK",
  "description": "Player â†’ Referee: Received GAME_INVITATION (must respond within 5s)",
  "allOf": [
    { "$ref": "_base_message.schema.json" }
  ],
  "type": "object",
  "properties": {
    "message_type": {
      "const": "GAME_JOIN_ACK"
    },
    "sender": {
      "type": "string",
      "pattern": "^player:.+$"
    },
    "match_id": {
      "type": "string"
    },
    "player_id": {
      "type": "string",
      "description": "Player ID acknowledging the invitation"
    },
    "arrival_timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp when player received invitation"
    },
    "accept": {
      "type": "boolean",
      "description": "Whether player accepts the game invitation"
    }
  },
  "required": ["protocol", "message_type", "sender", "timestamp", "conversation_id", "match_id", "player_id", "arrival_timestamp", "accept"]
}
