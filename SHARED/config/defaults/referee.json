{
  "default_timeout_seconds": 30,
  "max_concurrent_matches": 5,
  "logging_level": "INFO",
  "auto_report_results": true,
  "match_orchestration": {
    "game_join_timeout": 5,
    "parity_choice_timeout": 30,
    "auto_forfeit_on_timeout": true
  },
  "state_machine": {
    "initial_state": "INIT",
    "states": ["INIT", "REGISTERED", "ACTIVE", "SUSPENDED", "SHUTDOWN"],
    "transitions": {
      "INIT": ["REGISTERED", "SHUTDOWN"],
      "REGISTERED": ["ACTIVE", "SUSPENDED", "SHUTDOWN"],
      "ACTIVE": ["SUSPENDED", "SHUTDOWN"],
      "SUSPENDED": ["ACTIVE", "SHUTDOWN"],
      "SHUTDOWN": []
    }
  },
  "communication": {
    "protocol_version": "league.v2",
    "retry_policy": {
      "max_retries": 3,
      "base_delay": 1.0,
      "use_exponential_backoff": true,
      "jitter_range": 0.5
    }
  }
}
